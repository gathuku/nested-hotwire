<div class="page-header">
  <%= link_to items_path, class: 'btn btn-default' do %>
    All Items
  <% end %>
  <%= link_to edit_item_path(@item), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show item</h1>
</div>

<dl class="dl-horizontal">
  <dt>Quoute:</dt>
  <dd><%= @item.quoute %></dd>
  <dt>Name:</dt>
  <dd><%= @item.name %></dd>
  <dt>Cost:</dt>
  <dd><%= @item.cost %></dd>
</dl>
