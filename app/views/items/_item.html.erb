<div id="<%= Time.now.to_i %>" class="d-flex align-items-center">

<%= form.fields_for :items, item, child_index: Time.now.to_i do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost, class: "form-control" %>
  </div>

  <div>
    <%= link_to "Delete", "#" %>
  </div>
<% end %>

</div>
