<div id="<%= item.persisted? ? dom_id(item) : Time.now.to_i %>" class="d-flex align-items-center <%= item.removed ? "d-none" : "" %>">

<%= form.fields_for :items, item, child_index: item.persisted? ? item.id : Time.now.to_i do |f| %>

  <%= f.hidden_field :_destroy, value: item.removed %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost, class: "form-control" %>
  </div>

  <div class="ml-3">
    <%= link_to "Remove", item_path(item, replace_id: dom_id(item)), method: :delete %>
  </div>
<% end %>

</div>
