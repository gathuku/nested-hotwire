


<div class="row">
  <div class="col-sm-6">
    <h1>Quotes</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_quote_path, class: 'btn btn-primary' do %>
    Add New Quote
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            
      </tr>
    </thead>

    <tbody>
      <% @quotes.each do |quote| %>
        <%= content_tag :tr, id: dom_id(quote), class: dom_class(quote) do %>
          
            <td><%= link_to quote.name, quote %></td>
          

          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
